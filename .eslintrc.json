{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [],
  "plugins": ["import"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "ecmaFeatures": { "jsx": true },
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["webpack.config.js"],
      "parserOptions": { "sourceType": "module" }
    }
  ],
  "rules": {
    "import/no-extraneous-dependencies": "error",
    "import/no-unresolved": "error",
    "jsx-quotes": ["warn", "prefer-double"]
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": "webpack"
  }
}
